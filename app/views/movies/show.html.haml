%h1
  = @movie.title
  = link_to edit_movie_path(@movie), :class => 'btn' do
    %i.icon-edit

%h3= @movie.tagline

.movie-data
  %dl
    %dt Genres
    %dd= genre_list( @movie.genres )
    %dt Release Date
    %dd= @movie.released_on
    %dt Director
    %dd= @movie.director.name
    %dt The Movie Database ID
    %dd= @movie.tmdb_id
    %dt Internet Movie Database ID
    %dd= @movie.imdb_id

  %p= @movie.description
  = image_tag @movie.poster_url
